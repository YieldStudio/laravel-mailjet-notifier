{
    "name": "yieldstudio/laravel-mailjet-notifier",
    "description": "Easily send Mailjet transactional email and sms with Laravel notifier.",
    "type": "plugin",
    "keywords": [
        "yieldstudio",
        "laravel",
        "notifier",
        "notification",
        "mailjet",
        "email",
        "sms"
    ],
    "homepage": "https://github.com/YieldStudio/laravel-mailjet-notifier",
    "license": "MIT",
    "authors": [
        {
            "name": "James Hemery",
            "email": "james@yieldstudio.fr",
            "homepage": "https://yieldstudio.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^9|^10",
        "illuminate/database": "^9|^10",
        "mailjet/mailjet-apiv3-php": "^1.5"
    },
    "require-dev": {
        "ciareis/bypass": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.8",
        "orchestra/testbench": "7.*|8.*",
        "pestphp/pest": "^1.21",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "YieldStudio\\LaravelMailjetNotifier\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YieldStudio\\LaravelMailjetNotifier\\Tests\\": "tests"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test": "vendor/bin/pest",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "YieldStudio\\LaravelMailjetNotifier\\MailjetNotifierServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
